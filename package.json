{
  "name": "nao-todo-server",
  "version": "0.0.0",
  "description": "Nao todo server",
  "type": "module",
  "packageManager": "pnpm@9.12.1",
  "author": "Nathan Lee",
  "license": "MIT",
  "scripts": {
    "lint": "npx eslint -c eslint.config.mjs",
    "lint-on-debug": "npx eslint -c eslint.config.mjs --debug",
    "lint:lint-staged": "lint-staged",
    "format": "prettier --write --config .prettierrc .",
    "build": "pnpm --filter @nao-todo-server/main-app build",
    "serve": "node ./apps/main/dist/production/index.js",
    "dev:build": "pnpm --filter @nao-todo-server/main-app dev:build",
    "dev:serve": "node ./apps/main/dist/development/development.js"
  },
  "dependencies": {
    "@nao-todo-server/apis": "workspace:*",
    "@nao-todo-server/hooks": "workspace:*",
    "@nao-todo-server/models": "workspace:*",
    "@nao-todo-server/pipelines": "workspace:*",
    "@nao-todo-server/utils": "workspace:*",
    "@typegoose/typegoose": "^12.9.0",
    "md5": "^2.3.0",
    "moment": "^2.30.1",
    "mongodb": "^6.10.0",
    "mongoose": "^8.8.0",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/md5": "^2.3.5",
    "@types/node": "^22.9.0",
    "@types/validator": "^13.12.2",
    "eslint": "^9.14.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3"
  }
}