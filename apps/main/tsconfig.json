{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "lib": ["ES2015", "ES2020", "DOM"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "outDir": "./dist",
        "rootDir": "../../",
    },
    "include": ["src/**/*", "../../packages/**/*"]
}